<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Goal_setting">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/moto"
        android:textColor="#ffffff"
        android:padding="7dp"
        android:id="@+id/moto"
        android:background="@drawable/side_nav_bar"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="27dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ellipsize="start"
        android:gravity="center"
        android:id="@+id/cattitle"
        android:background="@drawable/side_nav_bar"
        android:textColor="#ffffff"
        android:hint="Title of the goal"
        android:textAlignment="center"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:layout_below="@+id/moto"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_marginTop="27dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ellipsize="start"
        android:gravity="center"
        android:id="@+id/hours"
        android:background="@drawable/edittextstyle"
        android:hint="Your goal hours"
        android:textAlignment="center"
        android:singleLine="true"
        android:inputType="number"
        android:layout_below="@+id/cattitle"
        android:layout_centerHorizontal="true" />
    <Spinner
        android:id="@+id/period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="50dp"
        android:entries="@array/period_arrays"
        android:background="@drawable/edittextstyle"
        android:textColor="#ffffff"
        android:layout_marginTop="37dp"
        android:prompt="@string/period_prompt"
        android:layout_below="@+id/hours"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Add goal"
        android:id="@+id/addnewgoal"
        android:textAlignment="center"
        android:background="@drawable/side_nav_bar"
        android:layout_below="@+id/period"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Goals"
        android:id="@+id/bgoals"
        android:textAlignment="center"
        android:background="@drawable/side_nav_bar"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Home"
        android:id="@+id/home"
        android:textAlignment="center"
        android:background="@drawable/side_nav_bar"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/bgoals"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
